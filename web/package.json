{
	"name": "@plugdata/web",
	"version": "0.2.0",
	"description": "Plugdata.io web utilities",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/plugdata/plugdata-framework.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/plugdata/plugdata-framework/issues"
	},
	"homepage": "https://github.com/plugdata/plugdata-framework/web/#readme",
	"scripts": {
		"build": "node ../node_modules/typescript/bin/tsc & cd .. & node _scripts/build-web.js",
		"test": "node node_modules/@plugdata/core/src/test/test.cli.js test ./dist/test ./test/configuration | node ../node_modules/pino-pretty/bin.js -t -i pid,hostname,name",
		"test:raw": "node node_modules/@plugdata/core/src/test/test.cli.js test ./dist/test ./test/configuration",
		"test:info": "node node_modules/@plugdata/core/src/test/test.cli.js info ./dist/test",
		"lint": "node ../node_modules/eslint/bin/eslint.js -c ../.eslintrc.js src/**/*.ts",
		"lint:fix": "node ../node_modules/eslint/bin/eslint.js -c ../.eslintrc.js src/**/*.ts --fix"
	},
	"dependencies": {
		"@plugdata/core": "file:../core/publish",
		"fastify": "^2.11.0",
		"fastify-auth": "^0.7.2",
		"fastify-oas": "^2.5.0",
		"fastify-static": "^2.5.1",
		"jwt-simple": "^0.5.6",
		"openapi3-ts": "^1.3.0"
	},
	"devDependencies": {
		"@types/node": "^12.0.3",
		"@types/swagger-schema-official": "^2.0.18"
	}
}
