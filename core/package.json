{
	"name": "@plugdata/core",
	"version": "0.0.4",
	"description": "Plugdata.io core utilities",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/plugdata/plugdata-framework.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/plugdata/plugdata-framework/issues"
	},
	"homepage": "https://github.com/plugdata/plugdata-framework/tree/master/core#readme",
	"keywords": [
		"di",
		"typescript-di",
		"dependency-injection",
		"configuration",
		"logger",
		"http-client",
		"events",
		"scheduled-jobs",
		"utils",
		"test"
	],
	"scripts": {
		"build": "tsc & cd .. & node _scripts/build-core.js",
		"test": "tsc --incremental && node dist/src/test/test.cli.js test ./dist/test",
		"test:info": "node dist/src/test/test.cli.js info ./dist/test",
		"lint": "node ../node_modules/eslint/bin/eslint.js -c ../.eslintrc.js src/**/*.ts",
		"lint:fix": "node ../node_modules/eslint/bin/eslint.js -c ../.eslintrc.js src/**/*.ts --fix"
	},
	"dependencies": {
		"ajv": "^6.10.1",
		"cron": "^1.7.1",
		"eventemitter3": "^4.0.0",
		"pino": "^5.12.6",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@types/node": "^12.0.3",
		"@types/pino": "^5.8.8"
	}
}
