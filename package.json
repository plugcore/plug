{
	"name": "plugdata-framework",
	"version": "0.1.1",
	"description": "![Plugdata.io](_docs/logo.png?raw=true \"Plugdata.io\")",
	"main": ".eslintrc.js",
	"scripts": {
		"postinstall": "cd core & npm i & cd ../data & npm i & cd ../web & npm i & cd .. & npm run build",
		"build": "node ./node_modules/npm-run-all/bin/run-s/index.js build:**",
		"build:core": "cd core & npm run build",
		"build:web": "cd web & npm run build",
		"build:data": "cd data & npm run build",
		"prepare-to-publish": "npm run check-all & node ./_scripts/set-packages-version.js",
		"publish-all": "node ./node_modules/npm-run-all/bin/run-s/index.js publish:**",
		"publish:core": "npm run build:core & cd core/publish & npm publish",
		"publish:web": "npm run build:web & cd web/publish & npm publish",
		"publish:data": "npm run build:data & cd data/publish & npm publish",
		"test": "npm run build && node ./node_modules/npm-run-all/bin/run-s/index.js test:**",
		"test:core": "cd core & npm test",
		"test:web": "cd web & npm test",
		"test:data": "cd data & npm test",
		"lint": "node ./node_modules/npm-run-all/bin/run-s/index.js lint:**",
		"lint:core": "cd core & npm run lint",
		"lint:web": "cd web & npm run lint",
		"lint:data": "cd data & npm run lint",
		"check-all": "node ./node_modules/npm-run-all/bin/run-s/index.js test lint",
		"dev": "node ./node_modules/npm-run-all/bin/run-p/index.js dev:**",
		"dev:core": "cd core & node ../node_modules/tsc-watch/index.js --noClear --onSuccess \"npm run build\"",
		"dev:web": "cd web & node ../node_modules/tsc-watch/index.js --noClear --onSuccess \"npm run build\"",
		"dev:data": "cd data & node ../node_modules/tsc-watch/index.js --noClear --onSuccess \"npm run build\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/plugdata/plugdata-framework.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/plugdata/plugdata-framework/issues"
	},
	"homepage": "https://github.com/plugdata/plugdata-framework#readme",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"eslint": "^6.1.0",
		"typescript": "^3.5.3",
		"npm-run-all": "^4.1.5",
		"tsc-watch": "^2.2.1"
	},
	"dependencies": {
		"pino-pretty": "^3.2.0"
	}
}