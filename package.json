{
	"name": "plugcore-framework",
	"version": "1.0.22",
	"description": "![plugcore.com](_docs/logo.png?raw=true \"plugcore.com\")",
	"main": ".eslintrc.js",
	"scripts": {
		"first-configure": "npm i yarn && npx yarn && npm run configure",
		"configure": "npx run-s configure:core configure:web configure:ds-mongodb test:**",
		"configure:core": "npx yarn --cwd core install && npm run build:core",
		"configure:web": "npx yarn --cwd web install && npx yarn --cwd ds-email upgrade @plugcore/core && npm run build:web",
		"configure:ds-mongodb": "npx yarn --cwd ds-mongodb install && npx yarn --cwd ds-email upgrade @plugcore/core && npm run build:ds-mongodb",
		"configure:ds-email": "npx yarn --cwd ds-email install && npx yarn --cwd ds-email upgrade @plugcore/core && npm run build:ds-email",
		"build": "npx run-s build:**",
		"build:core": "npm run --prefix core build",
		"build:web": "npm run --prefix web build",
		"build:ds-mongodb": "npm run --prefix ds-mongodb build",
		"build:ds-email": "npm run --prefix ds-email build",
		"prepare-to-publish": "npm run check-all & node ./_scripts/set-packages-version.js",
		"publish-all": "npx run-s publish:**",
		"publish:core": "cd core/publish & npm publish --access public",
		"publish:web": "cd web/publish & npm publish --access public",
		"publish:ds-mongodb": "cd ds-mongodb/publish & npm publish --access public",
		"publish:ds-email": "cd ds-email/publish & npm publish --access public",
		"test": "npm run build && npx run-s test:**",
		"test:core": "npm run --prefix core test",
		"test:web": "npm run --prefix web test",
		"test:ds-mongodb": "npm run --prefix ds-mongodb test",
		"test:ds-email": "npm run --prefix ds-email test",
		"lint": "npx run-s lint:**",
		"lint:core": "npm run --prefix core lint",
		"lint:web": "npm run --prefix web lint",
		"lint:ds-mongodb": "npm run --prefix ds-mongodb lint",
		"lint:ds-email": "npm run --prefix ds-email lint",
		"check-all": "npx run-s test lint",
		"dev": "node ./node_modules/npm-run-all/bin/run-p/index.js dev:**",
		"dev:core": "npx tsc-watch --noClear --onSuccess \"npm run build\" -p core",
		"dev:web": "npx tsc-watch --noClear --onSuccess \"npm run build\" -p web",
		"dev:ds-mongodb": "npx tsc-watch --noClear --onSuccess \"npm run build\" -p ds-mongodb",
		"dev:ds-email": "npx tsc-watch --noClear --onSuccess \"npm run build\" -p ds-email",
		"link-published": "npm i && node _scripts/set-packages-version.js force same && npx run-s link-published:**",
		"link-published:core": "cd core/publish & npm link ",
		"link-published:web": "cd web/publish & npm link ",
		"link-published:ds-mongodb": "cd ds-mongodb/publish & npm link ",
		"link-published:ds-email": "cd ds-email/publish & npm link "
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/plugcore/plugcore.git"
	},
	"keywords": [],
	"author": "Plugcore.com",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/plugcore/plugcore/issues"
	},
	"homepage": "https://github.com/plugcore/plugcore#readme",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.15.2",
		"@typescript-eslint/parser": "^4.15.2",
		"eslint": "^7.20.0",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^3.2.0",
		"tsc-watch": "^4.2.9",
		"typescript": "^4.1.5",
		"yarn": "^1.22.10"
	}
}